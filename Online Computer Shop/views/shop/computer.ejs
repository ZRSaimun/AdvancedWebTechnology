<!DOCTYPE html>
<html>

<head>
    <title>All Computer</title>
    <link rel="stylesheet" type="text/css" href="/assets/style.css" />
</head>

<body>
    <ul>
        <li><a href="/">Home</a></li>
        <li style="float:right"><a href="/login">Log In</a></li>
        <li style="float:right">
            <div class="dropdown">
                <div class="dropbtn">Sign Up</div>
                <div class="dropdown-content">
                    <a href="/signup/customer">Customer</a>
                    <a href="/signup/admin">Admin</a>
                </div>
            </div>
        </li>
    </ul>
    <div align="center">
        <span align="center">
            <img align="center" src="<%=shop.R_IMAGE%>" alt="logo" height="200px" width="200px"/>
        </span>
        <span align="center">
            <h2><%=shop.R_NAME%></h2>
        </span>
        <span align="center">
            <i><%=shop.R_DESCRIPTION%></i>
        </span>
        <br/>
        <span align="center"><%=shop.R_TYPE%></span>
        <br/>
        <span align="center"><%=shop.R_LOCATION%></span>
        <br/>
        <br/>
        <span align="center">
            <h3>All Computer</h3>
        </span>
        <br/>
        <table border="1px" width="60%" align="center">
            <tr>
                <th width="15%">ID</th>
                <th width="15%">Title</th>
                <th width="30%">Description</th>
                <th width="30%">Image</th>
                <th width="10%">Action</th>
            </tr>

            <% for(var i=0; i < computerList.length; i++){ %>
                <tr>
                    <td align="center">
                        <%= computerList[i].F_ID %>
                    </td>
                    <td align="center">
                        <%= computerList[i].F_TITLE %>
                    </td>
                    <td align="center">
                        <%= computerList[i].F_DESCRIPTION %>
                    </td>
                    <td align="center">
                        <img align="center" src="<%= computerList[i].F_IMAGE %>" alt="logo" height="200px" width="200px" />
                    </td>
                    <td align="center">
                        <a href="/shop/<%= computerList[i].R_ID %>/computer/review/<%= computerList[i].F_ID %>">Read Review</a>
                    </td>
                </tr>
                <% } %>
        </table>
    </div>
</body>

</html>